<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <ImageView
        android:id="@+id/imageViewCade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:src="@drawable/sc2cade" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageViewCade"
        android:layout_marginTop="60dp"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonTerran"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_states"
            android:text="Terran" />

        <Button
            android:id="@+id/buttonProtoss"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_states"
            android:text="Protoss" />

        <Button
            android:id="@+id/buttonZerg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_states"
            android:text="Zerg" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Cade Build Orders"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/RestoreBuilds"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_states"
        android:text="Restore builds" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RestoreBuilds"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_states"
        android:text="Exit" />

</RelativeLayout>