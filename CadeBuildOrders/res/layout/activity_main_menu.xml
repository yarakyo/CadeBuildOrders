<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <ImageView
        android1:id="@+id/imageViewCade"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="82dp"
        android1:src="@drawable/sc2cade" />

    <LinearLayout
        android1:id="@+id/linearLayout1"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/imageViewCade"
        android1:layout_marginTop="60dp"
        android1:gravity="center" >

        <Button
            android1:id="@+id/buttonTerran"
            android1:layout_width="100dp"
            android1:layout_height="wrap_content"
            android1:text="Terran" />

        <Button
            android1:id="@+id/buttonProtoss"
            android1:layout_width="100dp"
            android1:layout_height="wrap_content"
            android1:text="Protoss" />

        <Button
            android1:id="@+id/buttonZerg"
            android1:layout_width="100dp"
            android1:layout_height="wrap_content"
            android1:text="Zerg" />
    </LinearLayout>

    <TextView
        android1:id="@+id/textViewTitle"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="30dp"
        android1:text="Cade Build Orders"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:orientation="vertical" >
    </LinearLayout>

    <Button
        android1:id="@+id/RestoreBuilds"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/linearLayout1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="30dp"
        android1:text="Restore builds" />

    <Button
        android1:id="@+id/buttonExit"
        android1:layout_width="100dp"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/RestoreBuilds"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="20dp"
        android1:text="Exit" />

</RelativeLayout>
